<?xml version="1.0" encoding="utf-8"?>
<!-- Layout cho một item tin tức trong danh sách (ví dụ: RecyclerView hiển thị cụm tin) -->

<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"               <!-- Rộng chiếm toàn bộ chiều ngang -->
    android:layout_height="wrap_content"              <!-- Cao theo nội dung bên trong -->
    android:layout_marginStart="16dp"                 <!-- Lề trái cách 16dp -->
    android:layout_marginEnd="16dp"                   <!-- Lề phải cách 16dp -->
    android:layout_marginTop="12dp"                   <!-- Cách phần tử trên 12dp -->
    android:layout_marginBottom="8dp"                 <!-- Cách phần tử dưới 8dp -->
    app:cardCornerRadius="16dp"                       <!-- Bo góc thẻ 16dp -->
    app:cardUseCompatPadding="true"                   <!-- Giữ khoảng đệm tương thích giữa Android cũ/mới -->
    app:cardElevation="6dp"                           <!-- Đổ bóng nổi nhẹ -->
    android:foreground="?attr/selectableItemBackground"<!-- Hiệu ứng ripple khi nhấn -->
    android:clickable="true"                          <!-- Cho phép click -->
    app:cardBackgroundColor="@color/white"            <!-- Nền trắng cho thẻ -->
    android:focusable="true">                         <!-- Cho phép focus bằng bàn phím/remote -->

    <!-- Bên trong thẻ CardView là LinearLayout dọc chứa ảnh + thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ========== ẢNH BÀI TIN ========== -->
        <!-- Ảnh hiển thị đầu thẻ, bo 2 góc trên -->
        <ImageView
            android:id="@+id/imgNews"                 <!-- ID ảnh để load qua code -->
            android:layout_width="match_parent"       <!-- Ảnh chiếm toàn bộ chiều ngang -->
            android:layout_height="200dp"             <!-- Cao cố định -->
            android:scaleType="centerCrop"            <!-- Phóng ảnh đầy, cắt bớt phần dư -->
            android:background="@drawable/rounded_top"<!-- Drawable bo tròn góc trên -->
            android:clipToOutline="true" />           <!-- Cắt ảnh theo viền drawable -->

        <!-- ========== PHẦN CHỮ: TIÊU ĐỀ + NGUỒN + NGÀY ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">                   <!-- Lề trong đều 16dp -->

            <!-- Tiêu đề tin tức -->
            <TextView
                android:id="@+id/tvNewsTitle"         <!-- ID tiêu đề -->
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"  <!-- Màu chữ đen -->
                android:textSize="18sp"                   <!-- Cỡ chữ vừa lớn -->
                android:fontFamily="@font/ibmplexsans_semibold" <!-- Font đậm nhẹ -->
                android:maxLines="2"                      <!-- Giới hạn tối đa 2 dòng -->
                android:ellipsize="end" />                <!-- Nếu dài thì thêm “…” -->

            <!-- Dòng chứa nguồn tin và ngày -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"         <!-- Sắp xếp nằm ngang -->
                android:gravity="center_vertical"         <!-- Căn giữa theo chiều dọc -->
                android:layout_marginTop="8dp">           <!-- Cách tiêu đề 8dp -->

                <!-- Thẻ nguồn (dạng badge nhỏ màu) -->
                <TextView
                    android:id="@+id/chipSource"         <!-- ID hiển thị nguồn -->
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"         <!-- Chiều cao cố định 28dp -->
                    android:minWidth="48dp"              <!-- Rộng tối thiểu 48dp -->
                    android:gravity="center_vertical|center_horizontal" <!-- Căn giữa -->
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="source"                <!-- Văn bản mặc định -->
                    android:textSize="12sp"              <!-- Cỡ chữ nhỏ -->
                    android:textColor="@android:color/white"  <!-- Chữ trắng -->
                    android:background="@drawable/badge_bg" /> <!-- Nền tròn màu chủ đạo -->

                <!-- Ngày đăng bài -->
                <TextView
                    android:id="@+id/tvDate"             <!-- ID ngày -->
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"    <!-- Cách badge 12dp -->
                    android:text="--"                    <!-- Mặc định -->
                    android:textSize="13sp"              <!-- Cỡ chữ nhỏ hơn -->
                    android:textColor="@color/title_gray" /> <!-- Màu xám nhạt -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
