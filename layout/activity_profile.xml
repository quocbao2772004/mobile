<?xml version="1.0" encoding="utf-8"?> <!-- Khai báo định dạng XML và mã hóa UTF-8 -->

<androidx.constraintlayout.widget.ConstraintLayout <!-- Layout cha kiểu ConstraintLayout để dễ căn giữa và bo góc thẻ -->
    xmlns:android="http://schemas.android.com/apk/res/android" <!-- Không gian tên Android -->
    android:layout_width="match_parent"                        <!-- Rộng toàn màn hình -->
    android:layout_height="match_parent"                       <!-- Cao toàn màn hình -->
    xmlns:tools="http://schemas.android.com/tools"             <!-- Không gian tên dành cho công cụ preview -->
    xmlns:app="http://schemas.android.com/apk/res-auto"        <!-- Cho phép sử dụng thuộc tính trong thư viện Material -->
    android:padding="10dp"                                     <!-- Lề trong 10dp -->
    android:background="#F6F4EE">                              <!-- Màu nền be sáng -->

    <!-- =================== KHUNG THẺ CHÍNH (CARD) =================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"                              <!-- ID của thẻ chứa nội dung -->
        android:layout_width="0dp"                              <!-- Co giãn tự động theo constraint -->
        android:layout_height="0dp"
        android:layout_margin="0dp"                             <!-- Không có lề ngoài -->
        app:cardBackgroundColor="#FFFFFF"                       <!-- Nền trắng cho thẻ -->
        app:cardCornerRadius="20dp"                             <!-- Bo góc 20dp -->
        app:cardElevation="3dp"                                 <!-- Đổ bóng nhẹ 3dp -->
        app:layout_constraintTop_toTopOf="parent"               <!-- Gắn trên cùng màn hình -->
        app:layout_constraintStart_toStartOf="parent"           <!-- Gắn trái màn hình -->
        app:layout_constraintEnd_toEndOf="parent"               <!-- Gắn phải màn hình -->
        app:layout_constraintBottom_toBottomOf="parent" >       <!-- Gắn đáy màn hình -->

        <!-- =================== NỘI DUNG BÊN TRONG CARD =================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"                      <!-- Sắp xếp dọc -->
            android:padding="16dp"                              <!-- Khoảng cách trong thẻ -->
            android:gravity="center_horizontal">                <!-- Căn giữa ngang -->

            <!-- ẢNH ĐẠI DIỆN NGƯỜI DÙNG -->
            <ImageView
                android:id="@+id/imgAvatar"                     <!-- ID ảnh avatar -->
                android:layout_width="98dp"                     <!-- Chiều rộng cố định -->
                android:layout_height="98dp"                    <!-- Chiều cao cố định -->
                android:src="@drawable/ic_avatar"               <!-- Ảnh mặc định -->
                android:scaleType="centerCrop"                  <!-- Cắt hình cho vừa khung -->
                android:background="@drawable/round_avatar"     <!-- Nền tròn -->
                android:clipToOutline="true" />                 <!-- Cắt hình theo đường viền (bo tròn) -->

            <!-- DÒNG CHỮ "CHỈNH SỬA THÔNG TIN" -->
            <TextView
                android:id="@+id/textView"                      <!-- ID TextView tiêu đề -->
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Chỉnh sửa thông tin" />           <!-- Nội dung hiển thị -->

            <!-- ========== Ô NHẬP HỌ VÀ TÊN ========== -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtName"                       <!-- ID layout chứa TextInputEditText -->
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" <!-- Viền bao kiểu Material -->
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và Tên"                        <!-- Gợi ý hiển thị -->
                android:layout_marginTop="14dp"
                app:boxCornerRadiusBottomEnd="28dp"             <!-- Bo tròn 4 góc -->
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                app:boxStrokeColor="#2BB4A6"                    <!-- Màu viền xanh ngọc -->
                app:boxStrokeWidth="1dp"                        <!-- Độ dày viền -->
                app:startIconDrawable="@android:drawable/ic_menu_myplaces"> <!-- Icon đầu ô -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editName"                  <!-- Ô nhập tên -->
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#111827"/>               <!-- Màu chữ đen nhạt -->
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ========== Ô NHẬP EMAIL ========== -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginTop="14dp"
                app:boxCornerRadiusBottomEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                app:boxStrokeColor="#2BB4A6"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@android:drawable/ic_dialog_email"> <!-- Icon email ở đầu -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmail"                 <!-- ID ô nhập email -->
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"        <!-- Gợi ý bàn phím có @ -->
                    android:textColor="#111827"/>               <!-- Màu chữ -->
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ========== Ô NHẬP SỐ ĐIỆN THOẠI ========== -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtPhone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                app:boxCornerRadiusBottomEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                android:layout_marginTop="14dp"
                app:boxStrokeColor="#2BB4A6"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@android:drawable/ic_menu_myplaces"> <!-- Icon điện thoại -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPhone"                 <!-- Ô nhập số điện thoại -->
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"                   <!-- Bàn phím số -->
                    android:textColor="#111827"/>               <!-- Màu chữ -->
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ========== NÚT CẬP NHẬT THÔNG TIN ========== -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Cập nhật thông tin"              <!-- Văn bản nút -->
                android:textColor="@android:color/white"       <!-- Chữ trắng -->
                app:backgroundTint="#2BB4A6"                   <!-- Nền xanh ngọc -->
                app:cornerRadius="28dp">                       <!-- Bo tròn nút -->
            </com.google.android.material.button.MaterialButton>

            <!-- ========== NÚT ĐĂNG XUẤT ========== -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" <!-- Kiểu nút có viền -->
                android:layout_marginTop="12dp"
                android:text="Đăng xuất"
                android:textColor="#EF4444"                    <!-- Màu chữ đỏ -->
                app:cornerRadius="28dp"                        <!-- Bo tròn -->
                app:strokeColor="#EF4444"                      <!-- Viền đỏ -->
                app:strokeWidth="2dp">                         <!-- Dày viền -->
            </com.google.android.material.button.MaterialButton>

        </LinearLayout> <!-- Hết khối nội dung trong thẻ -->
    </com.google.android.material.card.MaterialCardView> <!-- Hết MaterialCardView -->

</androidx.constraintlayout.widget.ConstraintLayout> <!-- Kết thúc layout cha -->
