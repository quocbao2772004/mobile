<?xml version="1.0" encoding="utf-8"?> <!-- Khai báo định dạng XML và mã hóa UTF-8 -->

<androidx.constraintlayout.widget.ConstraintLayout <!-- Bố cục gốc dùng ConstraintLayout để dễ căn chỉnh vị trí -->
    xmlns:android="http://schemas.android.com/apk/res/android" <!-- Không gian tên chuẩn Android -->
    xmlns:tools="http://schemas.android.com/tools"             <!-- Dùng cho Preview trong Android Studio -->
    xmlns:app="http://schemas.android.com/apk/res-auto"        <!-- Cho phép dùng thuộc tính của thư viện Material -->
    android:layout_width="match_parent"                        <!-- Chiều rộng chiếm toàn màn hình -->
    android:layout_height="match_parent"                       <!-- Chiều cao chiếm toàn màn hình -->
    android:padding="20dp"                                     <!-- Lề trong toàn màn hình -->
    android:background="@color/white">                         <!-- Nền trắng cho trang -->

    <!-- ================= Nút đóng góc phải trên ================= -->
    <ImageButton
        android:id="@+id/close_btn"                            <!-- ID để xử lý sự kiện "đóng màn hình" -->
        android:layout_width="36dp"                            <!-- Rộng 36dp -->
        android:layout_height="36dp"                           <!-- Cao 36dp -->
        android:src="@android:drawable/ic_menu_close_clear_cancel" <!-- Icon mặc định "X" -->
        android:background="?android:selectableItemBackgroundBorderless" <!-- Hiệu ứng nhấn ripple -->
        android:contentDescription="@string/close"              <!-- Mô tả cho người đọc màn hình -->
        app:tint = "#6B7280"                                   <!-- Màu xám cho icon -->
        app:layout_constraintTop_toTopOf="parent"              <!-- Gắn lên đỉnh màn hình -->
        app:layout_constraintEnd_toEndOf="parent" />            <!-- Gắn sang mép phải -->

    <!-- ================= Tiêu đề Đăng nhập ================= -->
    <TextView
        android:id="@+id/txDangNhap"                           <!-- ID của TextView tiêu đề -->
        android:layout_width="0dp"                             <!-- 0dp để Constraint tự giãn -->
        android:layout_height="wrap_content"                   <!-- Cao vừa nội dung -->
        android:layout_marginTop="60dp"                        <!-- Cách mép trên 60dp -->
        android:gravity="center"                               <!-- Căn giữa nội dung -->
        android:text="@string/login"                           <!-- Dòng chữ “Đăng nhập” -->
        android:textColor="@color/black"                       <!-- Màu chữ đen -->
        android:textSize="26sp"                                <!-- Cỡ chữ lớn -->
        android:textStyle="bold"                               <!-- In đậm -->
        app:layout_constraintEnd_toEndOf="parent"              <!-- Canh phải -->
        app:layout_constraintStart_toStartOf="parent"          <!-- Canh trái -->
        app:layout_constraintTop_toTopOf="parent" />           <!-- Cố định ở đầu màn hình -->

    <!-- ================= Ô nhập Email ================= -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail"                           <!-- Bao bọc EditText, tạo khung kiểu Material -->
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" <!-- Viền bao quanh kiểu “hộp” -->
        android:layout_width="0dp"                             <!-- Giãn tự động giữa 2 constraint -->
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"                        <!-- Cách tiêu đề 20dp -->
        android:hint="@string/email"                           <!-- Gợi ý hiển thị trong ô -->
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txDangNhap"> <!-- Nằm dưới tiêu đề -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtEmail"                         <!-- ID trường nhập email -->
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>              <!-- Kiểu nhập email, hiển thị @ và .com -->
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================= Ô nhập Mật khẩu ================= -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" <!-- Viền khung Material -->
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"                        <!-- Cách ô email 20dp -->
        android:hint="@string/password"                        <!-- Gợi ý “Mật khẩu” -->
        app:endIconMode="password_toggle"                      <!-- Có biểu tượng con mắt hiện/ẩn mật khẩu -->
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail"> <!-- Nằm dưới ô Email -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassword"                      <!-- ID ô nhập mật khẩu -->
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>                  <!-- Che ký tự bằng dấu ● -->
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================= Nút Đăng nhập ================= -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"                             <!-- ID nút đăng nhập -->
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btnLogin"                         <!-- Văn bản trên nút -->
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword"
        app:backgroundTint="#4F6EF7"                           <!-- Màu nền xanh dương -->
        android:textColor="@color/white"/>                     <!-- Màu chữ trắng -->

    <!-- ================= Thanh “Hoặc” chia phần đăng nhập khác ================= -->
    <LinearLayout
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin">

        <!-- Đường kẻ bên trái -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"                        <!-- Màu xám nhạt -->
            android:layout_weight="1"/>                         <!-- Giãn đều -->

        <!-- Chữ “Hoặc” ở giữa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_gravity="center" />

        <!-- Đường kẻ bên phải -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- ================= Nút Tiếp tục với Google ================= -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:text="Tiếp tục với Google"
        app:cornerRadius="26dp"                               <!-- Bo tròn -->
        app:icon="@drawable/ic_google"                        <!-- Icon logo Google -->
        app:iconTint="@null"                                  <!-- Giữ nguyên màu icon -->
        android:textColor="#000000"
        app:strokeColor="#DADCE0"                             <!-- Viền xám nhạt -->
        app:strokeWidth="1dp"
        app:backgroundTint="@android:color/white"             <!-- Nền trắng -->
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        app:iconGravity="textStart"                           <!-- Icon nằm trước chữ -->
        app:iconPadding="12dp"
        app:iconSize="26dp" />

    <!-- ================= Nút Tiếp tục với Facebook ================= -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebook"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Tiếp tục với Facebook"
        app:cornerRadius="26dp"
        app:icon="@drawable/ic_facebook"                      <!-- Icon logo Facebook -->
        app:iconTint="@null"
        android:textColor="#000000"
        app:strokeColor="#DADCE0"
        app:strokeWidth="1dp"
        app:backgroundTint="@android:color/white"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- ================= Dòng “Chưa có tài khoản? Đăng ký ngay” ================= -->
    <LinearLayout
        android:id="@+id/llSignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnFacebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Phần chữ “Chưa có tài khoản?” -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản? "
            android:textColor="#6B7280"/>

        <!-- Nút “Đăng ký ngay” -->
        <TextView
            android:id="@+id/tvSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký ngay"
            android:textStyle="bold"
            android:textColor="#4F6EF7"/> <!-- Màu xanh dương nổi bật -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
