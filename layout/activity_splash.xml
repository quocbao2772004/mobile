<?xml version="1.0" encoding="utf-8"?>
<!-- Giao diện màn hình Splash (hiển thị logo và thanh loading khi khởi động ứng dụng) -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"           <!-- Toàn màn -->
    android:layout_height="match_parent"          <!-- Toàn màn -->
    android:background="@android:color/white"     <!-- Nền trắng -->
    tools:context=".SplashActivity">              <!-- Liên kết class Java tương ứng -->

    <!-- Logo trung tâm -->
    <ImageView
        android:id="@+id/LogoImage"              <!-- ID để code load ảnh -->
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/chatgpt_image_22_42_49_22_thg_9__2025" /> <!-- Ảnh logo -->

    <!-- Thanh tiến trình -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoImage" /> <!-- Đặt dưới logo -->

</androidx.constraintlayout.widget.ConstraintLayout>
