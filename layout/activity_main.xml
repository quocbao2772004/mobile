<?xml version="1.0" encoding="utf-8"?> <!-- Khai báo file XML sử dụng mã hóa UTF-8 -->

<androidx.constraintlayout.widget.ConstraintLayout <!-- Layout gốc dạng Constraint để sắp xếp linh hoạt -->
    xmlns:android="http://schemas.android.com/apk/res/android" <!-- Không gian tên Android -->
    xmlns:app="http://schemas.android.com/apk/res-auto"        <!-- Cho phép dùng thuộc tính riêng của thư viện AndroidX -->
    xmlns:tools="http://schemas.android.com/tools"             <!-- Dùng cho Preview (hiển thị mẫu) -->
    android:id="@+id/main"                                     <!-- ID của layout chính -->
    android:layout_width="match_parent"                        <!-- Chiếm toàn bộ chiều ngang -->
    android:layout_height="match_parent"                       <!-- Chiếm toàn bộ chiều cao -->
    android:background="@color/home_bg"                        <!-- Màu nền (thường là xám nhạt) -->
    tools:context=".MainActivity">                             <!-- Gắn với lớp MainActivity trong code -->

    <!-- ========== NÚT MENU TRÁI TRÊN ========== -->
    <ImageButton
        android:id="@+id/ivMenu"                               <!-- ID nút menu -->
        android:layout_width="30dp"                            <!-- Rộng 30dp -->
        android:layout_height="30dp"                           <!-- Cao 30dp -->
        android:src="@drawable/frame_110"                      <!-- Hình biểu tượng menu -->
        android:layout_marginStart="18dp"                      <!-- Cách mép trái 18dp -->
        android:layout_marginTop="55dp"                        <!-- Cách mép trên 55dp -->
        android:background="@android:color/transparent"         <!-- Nền trong suốt -->
        android:contentDescription="Menu"                      <!-- Mô tả cho người dùng hỗ trợ -->
        app:layout_constraintTop_toTopOf="parent"              <!-- Gắn lên mép trên -->
        app:layout_constraintStart_toStartOf="parent" />        <!-- Gắn sang mép trái -->

    <!-- ========== NÚT TÌM KIẾM (ẩn mặc định) ========== -->
    <ImageView
        android:id="@+id/btnSearch"                            <!-- ID nút tìm kiếm -->
        android:layout_width="24dp"                            <!-- Rộng 24dp -->
        android:layout_height="24dp"                           <!-- Cao 24dp -->
        android:src="@drawable/ic_clear"                       <!-- Icon (có thể là nút xóa/tìm kiếm) -->
        android:background="@android:color/transparent"         <!-- Nền trong suốt -->
        android:scaleType="centerInside"                       <!-- Giữ tỷ lệ, canh giữa hình -->
        android:contentDescription="Search"                    <!-- Mô tả "Tìm kiếm" -->
        android:layout_marginStart="12dp"                      <!-- Cách nút menu 12dp -->
        android:layout_marginTop="58dp"                        <!-- Cách mép trên 58dp -->
        android:visibility="gone"                              <!-- Ẩn ban đầu, chỉ hiển thị khi có dữ liệu -->
        app:layout_constraintTop_toTopOf="parent"              <!-- Cố định phía trên -->
        app:layout_constraintStart_toEndOf="@id/ivMenu" />      <!-- Nằm bên phải nút menu -->

    <!-- ========== NÚT TÀI KHOẢN (GÓC PHẢI TRÊN) ========== -->
    <ImageButton
        android:id="@+id/btnAccount"                           <!-- ID nút tài khoản -->
        android:layout_width="24dp"                            <!-- Rộng 24dp -->
        android:layout_height="24dp"                           <!-- Cao 24dp -->
        android:src="@drawable/ic_account"                     <!-- Icon tài khoản người dùng -->
        android:background="@android:color/transparent"         <!-- Nền trong suốt -->
        android:scaleType="centerInside"                       <!-- Giữ tỉ lệ ảnh -->
        android:contentDescription="@string/app_name"           <!-- Mô tả cho trình đọc màn hình -->
        android:layout_marginTop="55dp"                        <!-- Cách đỉnh 55dp -->
        android:layout_marginEnd="18dp"                        <!-- Cách mép phải 18dp -->
        app:layout_constraintTop_toTopOf="parent"              <!-- Gắn lên đỉnh màn hình -->
        app:layout_constraintEnd_toEndOf="parent" />            <!-- Gắn sang mép phải -->

    <!-- ========== TIÊU ĐỀ PHẦN DANH SÁCH ========== -->
    <TextView
        android:id="@+id/tvTitle"                              <!-- ID TextView tiêu đề -->
        android:layout_width="wrap_content"                    <!-- Chiều rộng theo nội dung -->
        android:layout_height="wrap_content"                   <!-- Chiều cao theo nội dung -->
        android:fontFamily="@font/ibmplexsans_semibold"        <!-- Font chữ đậm nhẹ -->
        android:text="Mới và Hot"                              <!-- Văn bản mặc định -->
        android:textColor="@color/title_black"                 <!-- Màu chữ đen -->
        android:textSize="24sp"                                <!-- Cỡ chữ lớn -->
        android:layout_marginStart="18dp"                      <!-- Cách trái 18dp -->
        android:layout_marginTop="25dp"                        <!-- Cách trên 25dp -->
        app:layout_constraintStart_toStartOf="parent"           <!-- Cố định mép trái -->
        app:layout_constraintTop_toBottomOf="@id/ivMenu" />     <!-- Nằm dưới nút menu -->

    <!-- ========== NGÀY CẬP NHẬT ========== -->
    <TextView
        android:id="@+id/tvDate"                               <!-- ID TextView ngày -->
        android:layout_width="wrap_content"                    <!-- Rộng theo chữ -->
        android:layout_height="wrap_content"                   <!-- Cao theo chữ -->
        android:fontFamily="@font/ibmplexsans_semibold"        <!-- Font chữ nhất quán -->
        android:text="--"                                      <!-- Mặc định hiển thị dấu “--” -->
        android:textColor="@color/title_gray"                  <!-- Màu xám nhạt -->
        android:textSize="24sp"                                <!-- Cỡ chữ tương đương tiêu đề -->
        android:layout_marginStart="18dp"                      <!-- Lề trái 18dp -->
        android:layout_marginTop="10dp"                        <!-- Cách tiêu đề 10dp -->
        app:layout_constraintStart_toStartOf="parent"           <!-- Căn trái -->
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />    <!-- Nằm dưới tiêu đề -->

    <!-- ========== DANH SÁCH BÀI TIN (RecyclerView) ========== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNews"                               <!-- ID RecyclerView -->
        android:layout_width="0dp"                             <!-- 0dp để Constraint tính tự động -->
        android:layout_height="0dp"                            <!-- Căn co giãn theo ràng buộc -->
        app:layout_constraintTop_toBottomOf="@id/tvDate"       <!-- Nằm dưới TextView ngày -->
        app:layout_constraintStart_toStartOf="parent"           <!-- Căn trái -->
        app:layout_constraintEnd_toEndOf="parent"               <!-- Căn phải -->
        app:layout_constraintBottom_toBottomOf="parent"/>       <!-- Tràn xuống đáy màn hình -->

</androidx.constraintlayout.widget.ConstraintLayout> <!-- Kết thúc layout -->
