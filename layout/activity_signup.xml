<?xml version="1.0" encoding="utf-8"?> <!-- Khai báo tệp XML và mã hóa ký tự UTF-8 -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" <!-- Không gian tên Android -->
    xmlns:app="http://schemas.android.com/apk/res-auto"        <!-- Dùng cho các thuộc tính app: -->
    xmlns:tools="http://schemas.android.com/tools"             <!-- Dùng cho hiển thị preview -->
    android:layout_width="match_parent"                        <!-- Rộng toàn màn hình -->
    android:layout_height="match_parent"                       <!-- Cao toàn màn hình -->
    android:padding="20dp"                                     <!-- Khoảng cách lề trong -->
    android:background="@android:color/white">                 <!-- Nền trắng tinh -->

    <!-- ================== NÚT ĐÓNG (X) ================== -->
    <ImageButton
        android:id="@+id/btnClose"                              <!-- ID nút đóng -->
        android:layout_width="36dp"                             <!-- Kích thước 36x36dp -->
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" <!-- Icon mặc định “X” -->
        android:background="?attr/selectableItemBackgroundBorderless" <!-- Hiệu ứng ripple khi bấm -->
        android:contentDescription="@string/close"               <!-- Mô tả cho trình đọc màn hình -->
        app:tint="#6B7280"                                      <!-- Màu xám nhạt cho icon -->
        app:layout_constraintTop_toTopOf="parent"               <!-- Gắn mép trên màn hình -->
        app:layout_constraintEnd_toEndOf="parent"/>              <!-- Gắn mép phải -->

    <!-- ================== TIÊU ĐỀ “Đăng ký” ================== -->
    <TextView
        android:id="@+id/tvTitle"                               <!-- ID tiêu đề -->
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"                         <!-- Cách mép trên 56dp -->
        android:gravity="center"                                <!-- Căn giữa chữ -->
        android:text="@string/signup"                           <!-- Lấy chuỗi “Đăng ký” từ strings.xml -->
        android:textColor="@android:color/black"                <!-- Màu chữ đen -->
        android:textSize="26sp"                                 <!-- Cỡ chữ lớn -->
        android:textStyle="bold"                                <!-- In đậm -->
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ================== Ô NHẬP HỌ VÀ TÊN ================== -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputName"                              <!-- ID của TextInputLayout -->
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" <!-- Viền dạng box -->
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Họ và tên"                                <!-- Gợi ý trong ô -->
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtName"                           <!-- ID ô nhập -->
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>                <!-- Kiểu nhập: tên người -->
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================== Ô NHẬP EMAIL ================== -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/email"
        app:layout_constraintTop_toBottomOf="@id/inputName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>              <!-- Bàn phím có ký tự “@” -->
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================== Ô NHẬP MẬT KHẨU ================== -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/password"
        app:endIconMode="password_toggle"                      <!-- Có nút ẩn/hiện mật khẩu -->
        app:layout_constraintTop_toBottomOf="@id/inputEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>                  <!-- Ẩn ký tự khi nhập -->
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================== Ô NHẬP LẠI MẬT KHẨU ================== -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputConfirm"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/confirm_password"                <!-- Gợi ý “Xác nhận mật khẩu” -->
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/inputPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>                  <!-- Nhập lại mật khẩu -->
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ================== NÚT ĐĂNG KÝ ================== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/signup"
        android:textColor="@android:color/white"
        app:backgroundTint="#4F6EF7"                           <!-- Màu nền xanh đậm -->
        app:cornerRadius="24dp"                                <!-- Bo góc nút -->
        app:layout_constraintTop_toBottomOf="@id/inputConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================== THANH “HOẶC” (chia phần) ================== -->
    <LinearLayout
        android:id="@+id/or"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Đường kẻ bên trái -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E5E7EB"/>

        <!-- Chữ “Hoặc” -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc"
            android:textColor="@android:color/black"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <!-- Đường kẻ bên phải -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E5E7EB"/>
    </LinearLayout>

    <!-- ================== NÚT “TIẾP TỤC VỚI GOOGLE” ================== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:text="Tiếp tục với Google"
        app:cornerRadius="26dp"
        app:icon="@drawable/ic_google"                         <!-- Icon Google -->
        app:iconTint="@null"                                   <!-- Giữ nguyên màu gốc -->
        android:textColor="#000000"                            <!-- Màu chữ đen -->
        app:strokeColor="#DADCE0"                              <!-- Viền xám nhạt -->
        app:strokeWidth="1dp"
        app:backgroundTint="@android:color/white"              <!-- Nền trắng -->
        app:iconGravity="textStart"                            <!-- Icon nằm trước chữ -->
        app:iconPadding="12dp"                                 <!-- Khoảng cách giữa icon & chữ -->
        app:iconSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================== NÚT “TIẾP TỤC VỚI FACEBOOK” ================== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebook"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:text="Tiếp tục với Facebook"
        app:cornerRadius="26dp"
        app:icon="@drawable/ic_facebook"                       <!-- Icon Facebook -->
        app:iconTint="@android:color/white"                    <!-- Icon trắng -->
        android:textColor="@android:color/white"               <!-- Chữ trắng -->
        app:backgroundTint="#1877F2"                           <!-- Nền xanh Facebook -->
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================== DÒNG CHỮ “Đã có tài khoản? Đăng nhập” ================== -->
    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnFacebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản? "
            android:textColor="#6B7280"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textStyle="bold"
            android:textColor="#4F6EF7"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
