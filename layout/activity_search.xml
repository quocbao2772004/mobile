<?xml version="1.0" encoding="utf-8"?> <!-- Khai báo tệp XML, mã hóa UTF-8 -->

<androidx.constraintlayout.widget.ConstraintLayout <!-- Bố cục chính dạng ConstraintLayout -->
    xmlns:android="http://schemas.android.com/apk/res/android" <!-- Không gian tên chuẩn Android -->
    xmlns:app="http://schemas.android.com/apk/res-auto"        <!-- Cho phép dùng thuộc tính thư viện AndroidX -->
    xmlns:tools="http://schemas.android.com/tools"             <!-- Không gian tên cho preview Android Studio -->
    android:layout_width="match_parent"                        <!-- Chiều rộng toàn màn -->
    android:layout_height="match_parent"                       <!-- Chiều cao toàn màn -->
    android:padding="16dp"                                     <!-- Khoảng cách lề trong 16dp -->
    android:background="@color/white">                         <!-- Nền trắng cho toàn trang -->

    <!-- =================== THANH TÌM KIẾM =================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchBar"                             <!-- ID của thanh tìm kiếm -->
        android:layout_width="0dp"                              <!-- Dùng constraint để tự co giãn -->
        android:layout_height="44dp"                            <!-- Chiều cao 44dp -->
        app:cardBackgroundColor="#E5E7EB"                       <!-- Nền xám nhạt -->
        android:layout_marginTop="26dp"                         <!-- Cách đỉnh màn hình 26dp -->
        app:cardCornerRadius="22dp"                             <!-- Bo góc đều 22dp -->
        app:layout_constraintTop_toTopOf="parent"               <!-- Gắn lên mép trên -->
        app:layout_constraintStart_toStartOf="parent"           <!-- Gắn sang trái -->
        app:layout_constraintEnd_toEndOf="parent">              <!-- Gắn sang phải -->

        <!-- ========== LỚP CHỨA NỘI DUNG BÊN TRONG THANH SEARCH ========== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="12dp"                         <!-- Lề trái trong khung -->
            android:paddingEnd="8dp">                           <!-- Lề phải trong khung -->

            <!-- Ô NHẬP NỘI DUNG TÌM KIẾM -->
            <EditText
                android:id="@+id/search_input"                   <!-- ID ô nhập -->
                android:layout_width="match_parent"              <!-- Chiều rộng chiếm toàn khung -->
                android:layout_height="match_parent"             <!-- Cao toàn khung -->
                android:background="@android:color/transparent"  <!-- Không có viền, nền trong suốt -->
                android:textColor="#111827"                      <!-- Màu chữ đen xám -->
                android:textSize="14sp"                          <!-- Cỡ chữ 14sp -->
                android:hint="Tìm kiếm"                          <!-- Gợi ý hiển thị khi rỗng -->
                android:paddingStart="8dp"                       <!-- Lề trái trong ô -->
                android:paddingEnd="40dp"                        <!-- Chừa khoảng bên phải để icon clear -->
                android:singleLine="true"                        <!-- Giới hạn nhập 1 dòng -->
                android:gravity="start|center_vertical" />       <!-- Căn chữ trái và giữa dọc -->

            <!-- ICON XÓA NỘI DUNG TÌM KIẾM -->
            <ImageView
                android:id="@+id/btnClear"                       <!-- ID nút clear -->
                android:layout_width="24dp"                      <!-- Rộng 24dp -->
                android:layout_height="24dp"                     <!-- Cao 24dp -->
                android:layout_gravity="end|center_vertical"     <!-- Căn phải, giữa dọc -->
                android:src="@drawable/ic_clear"                 <!-- Biểu tượng hình dấu X -->
                android:background="@android:color/transparent"  <!-- Nền trong suốt -->
                android:contentDescription="Clear"/>             <!-- Mô tả cho trình đọc màn hình -->

        </FrameLayout> <!-- Kết thúc FrameLayout chứa EditText + nút clear -->
    </com.google.android.material.card.MaterialCardView> <!-- Kết thúc thanh tìm kiếm -->

    <!-- =================== TIÊU ĐỀ PHẦN GỢI Ý / KẾT QUẢ =================== -->
    <TextView
        android:id="@+id/tvSuggest"                             <!-- ID TextView tiêu đề -->
        android:layout_width="0dp"                              <!-- Tự giãn theo constraint -->
        android:layout_height="wrap_content"                    <!-- Cao vừa nội dung -->
        android:text="Tin liên quan"                            <!-- Văn bản mặc định -->
        android:textStyle="bold"                                <!-- In đậm -->
        android:textColor="#111827"                             <!-- Màu đen xám -->
        android:textSize="18sp"                                 <!-- Cỡ chữ 18sp -->
        app:layout_constraintTop_toBottomOf="@+id/searchBar"    <!-- Nằm dưới thanh tìm kiếm -->
        android:layout_marginTop="16dp"                         <!-- Cách thanh trên 16dp -->
        app:layout_constraintStart_toStartOf="parent"           <!-- Căn trái -->
        app:layout_constraintEnd_toEndOf="parent" />            <!-- Căn phải -->

    <!-- =================== DANH SÁCH KẾT QUẢ TÌM KIẾM =================== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNews"                                <!-- ID RecyclerView danh sách -->
        android:layout_width="0dp"                              <!-- 0dp để constraint co giãn -->
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSuggest"    <!-- Bắt đầu bên dưới tiêu đề -->
        app:layout_constraintStart_toStartOf="parent"           <!-- Căn trái -->
        app:layout_constraintEnd_toEndOf="parent"               <!-- Căn phải -->
        app:layout_constraintBottom_toBottomOf="parent" />      <!-- Tràn xuống đáy màn hình -->

</androidx.constraintlayout.widget.ConstraintLayout> <!-- Kết thúc bố cục cha -->
